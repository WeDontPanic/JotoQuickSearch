{
  "name": "Joto QuickSearch",
  "description": "Opens a Jotoba search of a selected text.",
  "version": "0.1.0",
  "manifest_version": 3,
  "icons": {
    "128": "/icon/128px.png"
  },
  "background": {
      "service_worker": "background.js"
  },
  "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "128": "/icon/128px.png"
      }
  },
  "options_page": "options.html",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
      "https://*/*",
      "http://*/*"
  ]
}